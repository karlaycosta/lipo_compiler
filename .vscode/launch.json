        {
            "name": "Debug Teste",
            "type": "lipo",
            "request": "launch",
            "program": "${workspaceFolder}/exemplos/teste.lip",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}
