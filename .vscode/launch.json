{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MiniDart (Arquivo Atual)",
            "type": "minidart",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": false,
            "compilerPath": "bin/compile.dart",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug com Stop na Entrada",
            "type": "minidart",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": true,
            "compilerPath": "${workspaceFolder}/bin/compile.dart",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Teste Validação Data",
            "type": "minidart",
            "request": "launch",
            "program": "${workspaceFolder}/exemplos/teste_validacao_data.mdart",
            "stopOnEntry": false,
            "compilerPath": "${workspaceFolder}/bin/compile.dart",
            "cwd": "${workspaceFolder}"
        }
    ]
}
